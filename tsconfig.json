{
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "docs",
        "auth",
        "settings",
        "tests",
        "jest.*.js",
        "jest.*.ts",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "ts-node": {
        "transpileOnly": true
    },
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "version": false,
        "ignoreCompilerErrors": true
    },
    "types": ["node", "jest", "@types/jest"],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6",
            "es7",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist/",
        "rootDir": "src/",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "node",
        "types": ["node", "jest", "@types/jest"],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    }
}
